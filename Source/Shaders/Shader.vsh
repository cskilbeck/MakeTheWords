//////////////////////////////////////////////////////////////////////
// Constants

uniform mat4 matrix;

//////////////////////////////////////////////////////////////////////
// Inputs

attribute vec2 vertexPosition;
attribute vec2 vertexTexCoord;
attribute vec4 vertexColor;

//////////////////////////////////////////////////////////////////////
// Outputs

varying lowp vec4 color;
varying lowp vec2 texCoord;

//////////////////////////////////////////////////////////////////////
// Shader

void main()
{
    color = vertexColor;
	texCoord = vertexTexCoord;
    gl_Position = matrix * vec4(vertexPosition, 0, 1);
}

//////////////////////////////////////////////////////////////////////
