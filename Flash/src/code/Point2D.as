package code
{
	//////////////////////////////////////////////////////////////////////

	import flash.geom.Point;

	//////////////////////////////////////////////////////////////////////

	public class Point2D
	{
		//////////////////////////////////////////////////////////////////////

		public var x: int;
		public var y: int;

		//////////////////////////////////////////////////////////////////////

		public function Point2D(X:int=0, Y:int=0):void
		{
			x = X;
			y = Y;
		}

		//////////////////////////////////////////////////////////////////////

		public function toString():String
		{
			return "(x=" + x.toString() + ",y=" + y.toString() + ")";
		}

		//////////////////////////////////////////////////////////////////////

		public function clone():Point2D
		{
			return new Point2D(x, y);
		}

		//////////////////////////////////////////////////////////////////////

		public function set(X:int, Y:int):void
		{
			x = X;
			y = Y;
		}

		//////////////////////////////////////////////////////////////////////

		public function setFromPoint(p:Point):void
		{
			x = p.x;
			y = p.y;
		}

		//////////////////////////////////////////////////////////////////////

		public function equals(p:Point2D):Boolean
		{
			return x == p.x && y == p.y;
		}

		//////////////////////////////////////////////////////////////////////

		public static function FromPoint(p:Point):Point2D
		{
			return new Point2D(p.x, p.y);
		}

		//////////////////////////////////////////////////////////////////////

		public function add(p:Point2D):Point2D
		{
			return new Point2D(x + p.x, y + p.y);
		}

		//////////////////////////////////////////////////////////////////////

		public function subtract(p:Point2D):Point2D
		{
			return new Point2D(x - p.x, y - p.y);
		}

		//////////////////////////////////////////////////////////////////////

		public function divideBy(p:Point2D):Point2D
		{
			return new Point2D(x / p.x, y / p.y);
		}
	}
}